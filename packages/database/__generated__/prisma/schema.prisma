generator client {
  provider = "prisma-client-js"
  output   = "../__generated__/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Campaign {
  id          String  @id @default(cuid())
  name        String
  description String?

  factions Faction[]
  maps     Map[]
  user     User      @relation(fields: [id], references: [id])
}

model Faction {
  id          String  @id @default(cuid())
  name        String
  description String?

  campaign Campaign @relation(fields: [id], references: [id])
}

model Map {
  id          String   @id @default(cuid())
  name        String
  description String?
  imageUrl    String?
  createdAt   DateTime @default(now())

  campaign Campaign @relation(fields: [id], references: [id])
}

model User {
  id           String @id @default(cuid())
  name         String
  email        String @unique
  passwordHash String

  campaigns Campaign[]
}
